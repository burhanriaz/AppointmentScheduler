@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentScheduling.Models.ApplicationUser> signInManager
@if(signInManager.IsSignedIn(User))
{
    <form method="post" asp-action="LogOff" asp-controller="Account" id="Logoff">
         <ul class="nav navbar-nav">
            <li class="text-white nav-link">Hello, @User.Identity.Name! </li>
            <li><a class="text-white nav-link" href="javascript:document.getElementById('Logoff').submit()">Log off</a></li>
        </ul>
            
      
    </form>
}

else
{ 
    <ul class="nav navbar-nav" >
         <li> <a  class="nav-link text-white" id="RegisterLink" asp-controller="Account" asp-action="Register">Register</a></li>
         <li> <a class="nav-link text-white" id="loginLink" asp-controller="Account" asp-action="Login"> Login</a></li>
     </ul>
}

